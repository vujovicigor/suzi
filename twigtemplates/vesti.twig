        <div class="vesti--prikazi-vest--naslov sub_titles"><a href="obavestenja/{{item.Slug}}">{{ item.Naslov }}</a></div>
        {% if item.Slika1 %}
          <div class="slika-small"><a href="obavestenja/{{item.Slug}}"><img class="slika" src="img/{{ item.Slika1 }}"></a></div>
        {% endif %}
        <div class="dates">{{ item.Datum | date("d.m.Y") }}</div>
      </div>
      {% endfor %}
    </div> 
    
